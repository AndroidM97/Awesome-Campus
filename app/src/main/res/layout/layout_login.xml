<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/loginLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/inputArea"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="60dp"/>
        <RelativeLayout
            android:id="@+id/inputArea"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/studentID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_username"
                    android:hint="@string/studentid"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/studentPassword"
                android:layout_below="@id/studentID"
                android:layout_width="240dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_password"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/loginBtn"
            android:text="@string/Login"
            android:layout_below="@id/inputArea"
            android:textColor="@color/md_white_1000"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="240dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onLineLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Already Login!"
            android:textColor="@color/md_black_1000"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>